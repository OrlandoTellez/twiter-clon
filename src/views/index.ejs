<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Twiter clon</title>
    <link rel="icon" type="image/svg+xml" href="../assets/iconos/logo-x.svg" />
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="css/index.css">
    <script type="module" src="./js/index.js"></script>
</head>

<body>
    <div class="header-inline-container">
        <%- include("./componentes/header-inline") %>

    </div>
    <div class="body-container">
        <div class="header">
            <%- include("./componentes/header-up") %>
        </div>

        <div class="container-postear">
            <form class="tweet-container--input">
                <input type="text" class="tweet-input" placeholder="¡¿Que esta pasando?!">
                <div class="container-postear--iconos">
                    <div class="container-iconos">
                        <a class="logo">
                            <img src="assets/iconos/foto.svg" alt="lgo">
                        </a>
                        <a href="#">
                            <img src="../assets/iconos/gif.svg" alt="icono-home">
                        </a>
                        <a href="#">
                            <img src="../assets/iconos/emoji.svg" alt="icono-search">
                        </a>
                        <a href="#">
                            <img src="../assets/iconos/calendar.svg" alt="icono-noti">
                        </a>
                        <a href="#">
                            <img src="../assets/iconos/maps.svg" alt="icono-users">
                        </a>
                    </div>
                    <div class="container-postear--iconos__postear">
                        <button type="submit" class="btn-postear">Postear</button>
                    </div>
                </div>
            </form>
        </div>

        <div class="container-app">
            <main class="tweet-container--index">
                <div class="tweet-container--index">
                    <% tweets.forEach(tweet => { %>
                        <%- include("./componentes/tweets.ejs", tweet) %>
                    <% }) %>
                </div>
            </main>
        </div>
    </div>

    <div class="container-article">
        <div class="search">
            <input type="text" placeholder="Buscar">
        </div>

        <%- include("./componentes/card-auth.ejs") %>

        <%- include("./componentes/card-suscribe.ejs") %>

        <%- include("./componentes/card-tendences.ejs") %>

        <article class="container-follow">
            <h3>A quien Seguir</h3>
            <div>
                <div>
                    <article>
                        <figure>
                            <img src="https://unavatar.io/x/EufoniaStudio" alt="imagen-usuario">
                        </figure>
                        <div class="usuario">
                            <div>
                                <h4>Eufonia Estudio</h4>
                                <p>@EufonioEstudio</p>
                            </div>
                            <a href="/">Seguir</a>
                        </div>
                    </article>
                </div>

                <div>
                    <article>
                        <figure>
                            <img src="https://unavatar.io/x/SergioRamos" alt="imagen-usuario">
                        </figure>
                        <div class="usuario">
                            <div>
                                <h4>Sergio Ramos</h4>
                                <p>@SergioRamos</p>
                            </div>
                            <a href="/">Seguir</a>
                        </div>
                    </article>
                </div>

                <div>
                    <article>
                        <figure>
                            <img src="https://unavatar.io/x/ElAlexQuackity" alt="imagen-usuario">
                        </figure>
                        <div class="usuario">
                            <div>
                                <h4>Quackity</h4>
                                <p>@ElAlexQuackity</p>
                            </div>
                            <a href="/">Seguir</a>
                        </div>
                    </article>
                </div>
            </div>
        </article>
    </div>
</body>

</html>