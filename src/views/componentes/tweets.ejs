<head>
    <link rel="stylesheet" href="../css/styles.css">

    <style>
        .iconos{
            width: 100%;
            display: flex;
            justify-content: space-between;
            && img{
                cursor: pointer;
            }
        }

        .tweet{
            padding: 5px 0px 20px 0px;
        }
    
        .tweets-container {
            width: 100vw;
            max-width: 580px;
            display: flex;
            gap: 10px;
            padding: 20px 20px 20px 20px;
            border-bottom: 0.1px solid #2f3336;
            && .perfil-figure .perfil-imagen {
                    width: 100px;
                    border-radius: 50%;
            }

            && .tweet-article {
                width: 100%;
                display: flex;
                flex-direction: column;
                gap: 5px;
            }
        }

        .picture-imagen--tweet{
            width: 100%;
            
            && img{
                width: 100%;
                max-width: 100%;
                border-radius: 0px;

            }
        }

        @media only screen and (min-width: 1024px){
            .tweets-container{
                padding-left: 40px;

            }
        }
    </style>
</head>

<section class="tweets-container">
    <figure class="perfil-figure">
        <img src="<%= imagen_perfil || 'https://unavatar.io/x/noHayNadaPorAqui' %>" alt="imagen-perfil" class="perfil-imagen">
    </figure>
    <article class="tweet-article">
        <div>
            <h3><%= nombre %></h3>
            <p><%= nombre_usuario %></p>
        </div>
        <div>
            <p class="tweet"><%= contenido %></p>
            <% if (imagen_perfil) { %>
                <picture class="picture-imagen--tweet">
                    <img src="<%= imagen_perfil %>" alt="">
                </picture>
            <% } %>
        </div>
        <div class="iconos">
            <figure>
                <img src="../assets/iconos/message.svg" alt="">
            </figure>
            <figure>
                <img src="../assets/iconos/retweet.svg" alt="">
            </figure>
            <figure>
                <img src="../assets/iconos/hearth.svg" alt="">
            </figure>
            <figure>
                <img src="../assets/iconos/infografia.svg" alt="">
            </figure>
            <figure>
                <img src="../assets/iconos/bookmark.svg" alt="">
            </figure>
        </div>
    </article>
</section>